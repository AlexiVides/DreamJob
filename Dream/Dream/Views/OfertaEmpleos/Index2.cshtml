@model IEnumerable<Dream.Models.OfertaEmpleo>

@{
    ViewBag.Title = "Index";
}

<!-- Link hacia el archivo de estilos css -->

<link rel="stylesheet" href="css/Ofert.css">
<style type="text/css">
</style>
@Styles.Render("~/Content/Ofert.css")
<script type="text/javascript"></script>


<section>
    <div class="pricing-box mt-4" ">
        <div class="card mt-5 border-5 pt-2 active pb-0 px-3 ">
            <div class="card-body ">
                <div class="row">
                    <div class="col-12 ">
                        <h4 class="card-title "><b>Ofertas de Empleo</b></h4>

                    </div>
                    <div class="col">
                        <h6 class="card-subtitle mb-2 text-muted">
                            <p class="card-text text-muted small ">
                                <img src="https://img.icons8.com/color/26/000000/christmas-star.png" class="mr-1 ">
                                <img src="https://img.icons8.com/color/26/000000/christmas-star.png" class="mr-1 ">
                                <img src="https://img.icons8.com/color/26/000000/christmas-star.png" class="mr-1 ">
                                <img src="https://img.icons8.com/color/26/000000/christmas-star.png" class="mr-1 ">
                                <img src="https://img.icons8.com/color/26/000000/christmas-star.png" class="mr-1 ">
                            </p>
                        </h6>
                    </div>
                </div>

            </div>


        </div>
    </div>
</section>

<div class="btn-volver">
</div>
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-4" id="pricing">
                <div class="panel-default border border-secondary" style="backdrop-filter: blur(1rem) margin-top: 20px; border-radius: 20px; ">
                    <div class="pricing-box mt-4">
                        <img src="https://cdn.milenio.com/uploads/media/2021/01/01/empleo-foto-shutterstock.jpg" height="70" class="mt-3" alt="">
                        <h4 class="f-20">@Html.DisplayFor(modelItem => item.nombre)</h4>

                        <div class="mt-4 pt-2" ;>
                            <p>
                                Empresa : @Html.DisplayFor(modelItem => item.DatosEmpresa.nombre)

                            </p>
                            <p class="mb-2">
                                Numero de vacantes :  @Html.DisplayFor(modelItem => item.nVacantes)
                            </p>
                            <p class="mb-2">
                                Requisitos :@Html.DisplayFor(modelItem => item.requerimientos)
                            </p>
                            <p class="mb-2">
                                <div class="btn-detalle" style="margin: 10px 33px;">
                                    @Html.ActionLink("Detalles", "Details2", new { id = item.idOfertaEmpleo })
                                </div>
                                @*<div class="btn-detalle" style="margin: 5px 2px;">
                    @Html.ActionLink("Actualizar", "Edit", new { id = item.idOfertaEmpleo })
                </div>
                <div class="btn-detalle" style="margin: 5px 101px;">
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idOfertaEmpleo })
                </div>*@
                            </p>
                        </div>



                    </div>








                </div>
            </div>
        }
    </div>

</div>




















