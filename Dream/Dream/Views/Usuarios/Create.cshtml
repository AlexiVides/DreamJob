@model Dream.Models.Usuario

@{
    ViewBag.Title = "Usuario";
    Layout = null;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div id="frm">
    <h4>Registrate</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <form id="frm">
        <div class="inset">
            <p>
                <label for="email">Dirección de Correo Electrónico</label>
                @Html.EditorFor(model => model.correo, new { htmlAttributes = new { @class = "form-control  ", @placeholder = "Ejemplo@gmail.com", @type = "email", required = "required", } })
                @Html.ValidationMessageFor(model => model.correo, "", new { @class = "text-danger" })
            </p>
            <p>
                <label for="password">Contraseña</label>
                @Html.EditorFor(model => model.contra, new { htmlAttributes = new { @class = "form-control ", @type = "password", @placeholder = "*******", required = "required" } })
                @Html.ValidationMessageFor(model => model.contra, "", new { @class = "text-danger" })
            </p>
            <div class="form-group">
                <p class="p-container">
                    <input type="submit" name="go" id="go" value="Create">
                    
                </p>
            </div>
        </div>

    </form>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>

</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

