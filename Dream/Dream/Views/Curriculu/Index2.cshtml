@model IEnumerable<Dream.Models.Curriculum>
<style>
    .table-container {
        margin: 20px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    .table-header {
        background-color: #f8f9fa;
        padding: 10px;
        font-weight: bold;
        border-bottom: 1px solid #dee2e6;
    }

    .table-row {
        background-color: #fff;
        transition: background-color 0.3s ease;
    }

    .table-row:hover {
        background-color: #f1f3f5;
    }

    .table-cell {
        padding: 10px;
    }

    .table-link {
        color: #007bff;
        text-decoration: none;
    }

    .table-link:hover {
        text-decoration: underline;
    }
</style>

<div class="table-container">
    <div class="table-header">
        <h2>Todos los Usuarios</h2>
        
    </div>
    <form class="search-form" method="get" action="@Url.Action("Index2", "Curriculu")">
        <div class="input-group">
            <input type="text" class="form-control" name="buscar" placeholder="Buscar..." style="width: 10000px;" />
            <button type="submit" class="btn btn-primary">Buscar</button>
           
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th class="table-cell">Nombre</th>
                <th class="table-cell">Apellido</th>
                <th class="table-cell">Edad</th>
                <th class="table-cell">Género</th>
                <th class="table-cell">Correo</th>
                <th class="table-cell">Accion</th>
                <th class="table-cell"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-row">
                    <td class="table-cell">@Html.DisplayFor(modelItem => item.nombre)</td>
                    <td class="table-cell">@Html.DisplayFor(modelItem => item.apellido)</td>
                    <td class="table-cell">@Html.DisplayFor(modelItem => item.edad)</td>
                    <td class="table-cell">@Html.DisplayFor(modelItem => item.genero)</td>
                    <td class="table-cell">@Html.DisplayFor(modelItem => item.Usuario.correo)</td>
                    <td class="table-cell">
                        @Html.ActionLink("Detalle", "Details", new { id = item.idCurriculum }, new { @class = "btn btn-warning table-link text-dark" })


                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>