@model Dream.Models.Curriculum

@{
    
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>LlenarCurriculum</title>
    @Styles.Render("~/Content/Curricul.css")
</head>

<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container rounded bg-white mt-5 mb-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <br />
            </div><br />
            <div class="row" id="D1">
                <br /><br />

                <div class="col-md-3 border-right" id="img">
                    <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                        <img class="rounded-circle mt-5" width="150px"
                             src="https://st3.depositphotos.com/15648834/17930/v/600/depositphotos_179308454-stock-illustration-unknown-person-silhouette-glasses-profile.jpg">
                        <span class="font-weight-bold">
                            <span class="text-black-50"><strong>@ViewBag.Mensaje</strong></span>
                            <span> </span>
                    </div>
                </div>
                <div class="col-md-5 border-right">
                    <div>
                        <h4>Datos</h4>
                    </div>
                    <div class="p-3 py-5">

                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label class="labels">Nombre</label>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Apellidos</label>
                                @Html.EditorFor(model => model.apellido, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.apellido, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mt-2">
                            <div class="col-md-6">
                                <label class="labels">Edad</label>
                                @Html.EditorFor(model => model.edad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.edad, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Genero</label>
                                @Html.EditorFor(model => model.genero, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.genero, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row mt-3">

                            <div class="col-md-6">
                                <label class="labels">Direccion</label>
                                @Html.EditorFor(model => model.direccion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.direccion, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Telefono</label>
                                @Html.EditorFor(model => model.telefono, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.telefono, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                <label class="labels">DUI</label>
                                @Html.EditorFor(model => model.dui, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.dui, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Licencia</label>
                                @Html.EditorFor(model => model.licencia, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.licencia, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Nivel Acádemico</label>
                                @Html.EditorFor(model => model.nivelAcademico, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nivelAcademico, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Historial Acádemico</label>
                                @Html.EditorFor(model => model.historialAcademico, new
                                {
                                    htmlAttributes = new { @class = "form-control" }
                                })
                                @Html.ValidationMessageFor(model => model.historialAcademico, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-6">
                                <label class="labels">Descripcion personal</label>
                                @Html.EditorFor(model => model.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.descripcion, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Correo electronico Opc.</label>
                                @Html.EditorFor(model => model.correoOpc, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.correoOpc, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-6">
                                <label class="labels">Segundo idioma</label>
                                @Html.EditorFor(model => model.segundoIdioma, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.segundoIdioma, "", new { @class = "text-danger" })
                            </div>
                            @*<div class="col-md-6">
                                  <label class="labels">Foto de perfil</label>
                                  @Html.EditorFor(model => model.imagen, new { htmlAttributes = new { @class = "form-control" } })
                                  @Html.ValidationMessageFor(model => model.imagen, "", new { @class = "text-danger" })
                                </div>*@
                        </div>
                        <div>
                            <br />
                        </div>
                        <div class="mt-5 text-center">
                            <input class="btn btn-primary profile-button" type="submit" value="Guardar" /><br />
                        </div><br />

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="p-3 py-5">
                        <div>
                            <h4>Experiencia laboral</h4>
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Experiencias laborales</label>
                            @Html.EditorFor(model => model.experienciaLab, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.experienciaLab, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-12">
                            <label class="labels">Referencias personales</label>
                            @Html.EditorFor(model => model.referenciaPers, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.referenciaPers, "", new { @class = "text-danger" })
                        </div>


                    </div>
                </div>
            </div>
        </div>
    }

</body>
</html>
